QPushButton {
    height: 32px;
    width: 120px;
    border: none;
    background-color: rgba(0, 103, 192, 1.0);
    border-radius: 8px;
    color: rgba(255, 255, 255, 1.0);
    font-size: 14px;
    box-shadow: 0px 10px 100px rgba(0, 0, 0, 0.3);
}
QPushButton:hover {
    background-color: rgba(25, 117, 196, 1.0);
}
QPushButton:pressed {
    background-color: rgba(25, 117, 196, 1.0);
    color: rgba(255, 255, 255, 0.5);
}
